<div class="d-flex flex-row align-items-center">
  <div class="me-auto">
    <h3>Users</h3>
  </div>
  <div>
    <%= link_to '+ New', new_user_path, class: 'btn btn-sm btn-success me-2' %>
  </div>
</div>

<% if @users.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>E-mail</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Role</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.role %></td>
          <td class="fit"><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-sm btn-outline-primary' %></td>
          <td class="fit"><%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  No users
<% end %>
